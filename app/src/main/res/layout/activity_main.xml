<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/naiveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Naive Way"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.33" />

    <Button
        android:id="@+id/correctButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correct Way"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.66" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="The goal is to finish the app itself after 10 sec."
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/naiveButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/naiveUndo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Naive Undo"
        app:layout_constraintEnd_toEndOf="@+id/naiveButton"
        app:layout_constraintStart_toStartOf="@+id/naiveButton"
        app:layout_constraintTop_toBottomOf="@+id/naiveButton" />

    <Button
        android:id="@+id/correctUndo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correct Undo"
        app:layout_constraintEnd_toEndOf="@+id/correctButton"
        app:layout_constraintStart_toStartOf="@+id/correctButton"
        app:layout_constraintTop_toBottomOf="@+id/correctButton" />
</androidx.constraintlayout.widget.ConstraintLayout>